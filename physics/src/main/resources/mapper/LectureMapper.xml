<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">  

<mapper namespace="com.osu.lecture.mapper.LectureMapper">
 
    <insert id="insertLecture">
        INSERT INTO lecture (title, description, link, date, instructor_id) VALUES (#{lectureTitle}, #{lectureDesc}, #{lectureLink}, #{lectureDate}, #{instructorId})
    </insert>
    
    <select id="listLecture" resultType="com.osu.lecture.lecture.LectureVO">
    	<![CDATA[ SELECT * FROM lecture ORDER BY id DESC; ]]>
    </select>
    
    <select id="detailLecture" resultType="com.osu.lecture.lecture.LectureVO">
    	SELECT * FROM lecture WHERE lectureId = #{lectureId}
    </select>
 
    <delete id="deleteLecture">
        DELETE FROM lecture WHERE lectureId = #{lectureId}
    </delete>
    
    <update id="updateLecture">
        UPDATE lecture SET lectureTitle = #{lectureTitle}
    </update>

</mapper>
